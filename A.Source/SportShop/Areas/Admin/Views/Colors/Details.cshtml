@model SportShop.Entities.Color

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header" style="margin-top:20px">Quản lý màu sắc</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div>

    <dl class="dl-horizontal">
        <dt>
           <span>Tên màu</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ColorName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.ColorID }, htmlAttributes: new { @class = "btn btn-default" })
    @Html.ActionLink("Quay lại", "Index", null, htmlAttributes: new { @class = "btn btn-default" })

</p>
