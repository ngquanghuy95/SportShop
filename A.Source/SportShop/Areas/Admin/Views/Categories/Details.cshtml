@model SportShop.Entities.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header" style="margin-top:20px">Quản lý danh mục</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div>

    <dl class="dl-horizontal">
        <dt>
            <span>Tên danh mục:</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.CategoryID }, htmlAttributes: new { @class = "btn btn-default" }) 
    @Html.ActionLink("Quay lại", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
</p>
