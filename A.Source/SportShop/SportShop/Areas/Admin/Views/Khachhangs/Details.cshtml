@model SportShop.Entities.Khachhang

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header" style="margin-top:20px">Chi tiết khách hàng</h1>
    </div>
</div>

<div>
    <dl class="dl-horizontal">
        <dt>
            Tên khách hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tenkhachhang)
        </dd>

        <dt>
            Số điện thoại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sodienthoai)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Địa chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Diachi)
        </dd>
        <dt>
            Số tiền đã giao dịch:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sotiendagiaodich)
        </dd>


    </dl>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @*<a href="/Admin/Users/Edit/@Model.KhachhangID" class="btn btn-primary">Sửa</a>*@
        <a href="/Admin/Khachhangs" class="btn btn-primary">Hủy</a>
    </div>
</div>

