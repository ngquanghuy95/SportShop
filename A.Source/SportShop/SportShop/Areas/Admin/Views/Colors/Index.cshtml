@model IEnumerable<SportShop.Entities.Color>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .pagination {
        margin: 0;
        float: right;
    }

    #dataTables-example tr th {
        background-color: #337AB7;
        color: #ffffff;
    }

    .actbtn {
        font-size: 16px;
        padding: 6px;
    }

    .actedit {
        color: #00ff21;
    }

    .actdetail {
        color: #5bc0de;
    }

    .actdelete {
        color: #d9534f;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header" style="margin-top:20px">Quản lý màu sắc</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<p>
    <a href="@Url.Action("Create")" class="btn btn-outline btn-primary btn-lg">
        <i class="fa fa-plus-circle"></i>Tạo mới
    </a>
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Chức năng</th>
                        <th>Tên màu sắc</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="width:13%;text-align:center;">
                                <a href="@Url.Action("Edit", new { id = item.ColorID })" class="actbtn actedit">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                                <a href="@Url.Action("Details", new { id = item.ColorID })" class="actbtn actdetail">
                                    <i class="fa fa-info" aria-hidden="true"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.ColorID })" class="actbtn actdelete ">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ColorName)
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<script src="~/js/jquery.dataTables.min.js"></script>
<script src="~/js/dataTables.bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
        //$('#dataTables-example_wrapper .row').first().css('display', 'none');
    });
</script> 