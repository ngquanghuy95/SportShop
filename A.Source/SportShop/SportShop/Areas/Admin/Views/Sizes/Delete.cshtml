@model SportShop.Entities.Size

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header" style="margin-top:20px">Quản lý size</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<h3>Bạn có chắc muốn xóa size này?</h3>
<div>
   
    <dl class="dl-horizontal">
        <dt>
            <span>Số size</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SizeNum)
        </dd>

        <dt>
            <span>Mô tả</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> 
         @Html.ActionLink("Quay lại", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
        </div>
    }
</div>
